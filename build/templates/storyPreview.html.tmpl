<div class="row">
	<div class="twelve columns story">
		<div id="genre">
		{% for keyword in keywords %}
			<a href="#{{ keyword }}">{{ keyword }}</a>
		{% endfor %}
		</div>
		<div class="row">
			<div class="three columns">
				<a href="{{ path }}">
				{% if id < 10 %}
					<img id="cartoon" src="{{ preview_img }}" alt="{{ title }}" />
				{% else %}
					<a class="inf_img" href="{{ preview_img }}" rel="{{ title }}"></a>
				{% endif %}
				</a>
			</div>
			<div class="nine columns">
				<div id="meta">
					<a href="{{ path }}"><h1 class="title">{{ title }}</h1></a>
					<h2 class="subtitle">{{ subtitle }}</h2>
					<h3 class="author">by <span class="name">{{ author }}</span></h3>
					<h4 class="date">Published {{ publish_date }}</h4>
				</div>
				<p class="preview">{{ preview }}</p>
			</div>
		</div>
	</div>
</div>