<div class="row">
	<div class="twelve columns story">
		<div id="genre">
		{% for keyword in keywords %}
			<a href="#{{ keyword }}">{{ keyword }}</a>
		{% endfor %}
		</div>
		<div class="row">
			<div class="twelve columns toon text-center">
				<a href="{{ path }}">
					<img id="cartoon" src="{{ path }}/{{ src }}" alt="{{ caption }}" />
				</a>
				<p class="caption">{{ caption }}</p>
				<div id="meta" href="{{ path }}">
					<h3 class="author">by <span class="name">{{ author }}</span></h3>
					<h4 class="date">Published {{ publish_date }}</h4>
				</div>
			</div>
		</div>
	</div>
</div>